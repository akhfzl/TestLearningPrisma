// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int @id @default(autoincrement())
  first_name    String
  last_name     String 
  password      String
  Profile       Profile?
}

model Profile {
  id            Int @id @default(autoincrement())
  bio           String?
  user          User @relation(fields:[userId], references:[id])
  userId        Int @unique
}